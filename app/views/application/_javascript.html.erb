<%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>

<%= javascript_include_tag 'https://js.stripe.com/v2/' %>
<%= javascript_tag do %>
 Stripe.setPublishableKey('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
<% end %>

<% if Rails.env.test? %>
  <%= javascript_tag do %>
   $.fx.off = true;
   $.ajaxSetup({ async: false });
  <% end %>
<% end %>

<% if Rails.env.production? %>
  <%= javascript_tag do %>
   Gauges.setSiteId('<%= ENV['GAUGES_SITE_ID'] %>');
  <% end %>
  <%= javascript_include_tag 'https://load.sumome.com/', 'async' => true, 'data-sumo-site-id' => ENV['SUMO_SITE_ID'] %>
<% end %>
