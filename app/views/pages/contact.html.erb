<section class="contact-hero">
  <div role="container">
    <h2 class="contact-hero-text">
      <span class="contact-hero-text-contact">Contact Us</span>
      <span class="contact-hero-text-back">By Filling Out this Form</span>
      <span class="contact-hero-text-back">and We'll Get Back To You</span>
      <span class="contact-hero-text-right">Right Away</span>
    </h2>
  </div>
</section>
<section class="contact-form">
  <div role="container">
    <form method="POST" action="">
      <input type="text" name="name" placeholder="Name">
      <input type="email" name="email" placeholder="Email">
      <textarea name="message" placeholder="Message"></textarea>
      <input type="submit" value="Contact Us">
    </form>
  </div>
</section>
<%= render 'footer' %>
