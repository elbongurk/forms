<%= panels_for [@user, 'Payment History'] do %>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>ID</th>
        <th>Date</th>
        <th>Amount</th>
        <th>Description</th>
        <th>Payment method</th>
      </tr>
    </thead>
    <tbody>
      <% if @charges.present? %>
        <%= render @charges %>
      <% else %>
        <tr>
          <td class="empty" colspan="6">
            No payment history on file.
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
