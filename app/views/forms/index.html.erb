<div class="panel">
  <header>
    <h2>Forms</h2>
  </header>
  <div class="panel-body">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Submissions</th>
          <th>Last Submission</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% if @forms.present? %>
          <%= render partial: 'form', collection: @forms, locals: { submission_count: @submission_count, submission_last: @submission_last } %>
        <% else %>
          <tr>
            <td class="empty" colspan="6">
              <%= link_to "Add a form", new_form_path %> to see it listed here.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% if @user.form_quota_met?  %>
      <p>You will need to upgrade your subscription in order to create more forms.</p>
      <p><%= link_to "Upgrade Subscription", account_subscription_path, class: :button %></p>
    <% else %>
      <p><%= link_to "Add Form", new_form_path, class: :button %></p>
    <% end %>
  </div>
</div>
