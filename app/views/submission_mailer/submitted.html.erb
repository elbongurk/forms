<h1 style='color:#333;font-family:"Helvetica Neue","Helvetica","Roboto","Arial",sans-serif;font-size:28px;font-weight:600;margin-top:0'><a href="<%= form_url(@form) %>" style="color:#14b2cf;color:inherit;text-decoration:none"><%= @form.name %></a></h1>

<h3 style='font-family:"Helvetica Neue","Helvetica","Roboto","Arial",sans-serif;font-size:16px;font-weight:400;color:#999 !important'><a href="<%= form_submission_url(@form, @submission) %>" style="color:#14b2cf;color:inherit;text-decoration:none">New Submission</a></h3>

<% @submission.payload.each do |key, value| %>
  <h2 style='font-family:"Helvetica Neue","Helvetica","Roboto","Arial",sans-serif;font-size:16px;font-weight:700;margin-top:30px;color:#333 !important'><%= key %></h2>

  <pre style='color:#333;font-family:"Helvetica Neue","Helvetica","Roboto","Arial",sans-serif;font-size:14px;line-height:1.5em;white-space:pre-wrap'><%= value %></pre>
<% end %>

<a class="button" href="<%= form_submission_url(@form, @submission) %>" style='background:#ff0a35;color:#fff;border-radius:3px;display:block;font-family:"Helvetica Neue","Helvetica","Roboto","Arial",sans-serif;font-weight:600;margin-top:30px;padding-top:12px;padding-bottom:12px;padding-left:24px;padding-right:24px;text-align:center;text-decoration:none'>View Submission</a>
