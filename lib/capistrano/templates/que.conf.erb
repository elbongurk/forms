description "Que Background Worker"

stop on (stopping que-manager or runlevel [06])

setuid <%= options[:user] %>
setgid <%= options[:user] %>

respawn
respawn limit 3 30

instance ${app}

script
exec /bin/bash <<EOT
  cd $app
  source /etc/environment.local

  logger -t que "Starting worker: $app"

  exec bundle exec que ./config/environment.rb
EOT
end script
